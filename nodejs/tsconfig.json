{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./dist",
        "baseUrl": "src",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": ["es2017"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
